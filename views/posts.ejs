<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/style.css">
    <script src="./js/test.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <%- include('nav.html') %>

    <div class="container">
    <h1 class="mt-4">글 목록</h1>
    <h2 class="mt-3">총 글 수 <%= POSTS.length %></h2>
    
    <% if(POSTS.length> 0) { %>
      <% for(let i=0; i < POSTS.length; i++) { %>
        <div class="card mt-3" style="width: 100%">
          <div class="card-body">
            <h5 class="card-title"><%= POSTS[i].title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text"><%= POSTS[i].content %></p>
            <button type="submit" class="btn btn-primary">글 수정</button>
            <button type="submit" class="btn btn-primary">글 삭제</button>
          </div>
        </div>
        <% } %>
      <% } %>


      <form action="/posts" method="POST" class="mt-5">
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">TITLE</label>
          <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="글 제목을 입력해주세요." name="title">
        </div>
        <div class="form-floating mb-3">
          <textarea class="form-control" placeholder="글 내용을 입력해주세요." id="floatingTextarea2" style="height: 100px" name="content"></textarea>
          <label for="floatingTextarea2">CONTENT</label>
        </div>
        <button type="submit" class="btn btn-primary mb-5">글 작성</button>
      </form>

    

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>